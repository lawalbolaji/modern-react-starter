{
  "name": "@modern-react/starter",
  "version": "0.1.0",
  "author": {
    "name": "Abdulrasheed Lawal",
    "email": "hi@lawalrasheed.com"
  },
  "description": "An opinionated development setup for client spa's with react",
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120
  },
  "scripts": {
    "dev:start": "eslint './src/**/*.{js,jsx,ts,tsx}' && webpack serve --mode development",
    "build:ci": "eslint './src/**/*.{js,jsx,ts,tsx}' && prettier . --check './src/**/*.{js,jsx,ts,tsx}' && webpack --mode production",
    "build": "webpack --mode production"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.22.9",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.22.5",
    "@types/react": "^18.2.19",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.3.0",
    "@typescript-eslint/parser": "^6.3.0",
    "autoprefixer": "^10.4.14",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.2",
    "eslint": "^8.46.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "postcss": "^8.4.27",
    "postcss-loader": "^7.3.3",
    "prettier": "3.0.1",
    "style-loader": "^3.3.3",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "nanoid": "^4.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^8.1.2"
  }
}
